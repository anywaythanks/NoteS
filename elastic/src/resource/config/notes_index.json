{
  "settings": {
    "number_of_shards": 1,
    "default_pipeline": "rubert-embeddings",
    "analysis": {
      "analyzer": {
        "russian_search": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": ["lowercase", "russian_stemmer"]
        }
      },
      "filter": {
        "russian_stemmer": {
          "type": "stemmer",
          "language": "russian"
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": { "type": "keyword" },
      "title": { "type": "text" },
      "content": {
        "type": "text",
        "analyzer": "russian_search"
      },
      "language": {"type": "text"},
      "syntax_type": { "type": "keyword" },
      "entry_type": { "type": "keyword" },
      "owner": { "type": "long" },
      "vector.predicted_value": {
        "type": "dense_vector",
        "dims": 312,
        "index": true,
        "similarity": "cosine"
      }
    },
    "_source": {
      "excludes": [
        "vector.vector"
      ]
    }
  }
}